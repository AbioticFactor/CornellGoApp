<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Views.AvatarView"
             x:Name="this">
    <ContentView.Content>
        <StackLayout Orientation="Horizontal" BindingContext="{x:Reference this}">
            <Frame CornerRadius="18" IsClippedToBounds="True" Padding="0" WidthRequest="36" HeightRequest="36" BackgroundColor="#0000">
                <Image Source="{Binding Image}"/>
            </Frame>
            <StackLayout Orientation="Vertical" Spacing="0">
                <Label Text="{Binding Name}" TextColor="{StaticResource SecondaryText}" FontSize="14"/>
                <Label Text="{Binding Path='Score', StringFormat='Score: {0}'}" TextColor="{StaticResource TertiaryText}" FontSize="12"/>
            </StackLayout>
        </StackLayout>
    </ContentView.Content>
</ContentView>